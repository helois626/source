<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="12dp"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/event_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nothing planned. Tap to add a request."
            android:id="@+id/textView60"
            android:layout_marginStart="22dp"
            android:layout_above="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15"
            android:id="@+id/textView61"
            android:layout_above="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:id="@+id/imageView10"
            android:background="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView61"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:id="@+id/imageView14"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView61"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sun"
            android:id="@+id/textView65"
            android:layout_below="@+id/textView61"
            android:layout_alignEnd="@+id/textView61"
            android:textColor="#000000" />
    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_listview"
        android:layout_above="@+id/ibtn_add_new"
        android:layout_marginBottom="20dp"
        android:divider="@null"
        android:layout_below="@+id/relativeLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_add_new"
        android:background="@drawable/btn_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="ADD A REQUEST" />

</RelativeLayout>